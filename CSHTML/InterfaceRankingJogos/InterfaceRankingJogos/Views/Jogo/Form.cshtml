@model JogoViewModel

<div class="container mt-4">
	<form asp-action="Enviar" method="post" enctype="multipart/form-data">
		<input value="@ViewBag.operacao" name="operacao" hidden />
		<input value="@Model.id" asp-for="id" hidden />

		<div class="form-group">
			<label asp-for="nome" class="control-label"> Nome do Jogo </label>
			<input asp-for="nome" class="form-control" />
			<span asp-validation-for="nome" class="text-danger"></span>
		</div>


		<div class="form-group">
			<label asp-for="descricao" class="control-label"> Descrição </label>
			<input asp-for="descricao" class="form-control" />
			<span asp-validation-for="descricao" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-success">Salvar</button>
		<a href="@Url.Action("Index", "home")" class="btn btn-secondary">Cancelar</a>
	</form>
</div>